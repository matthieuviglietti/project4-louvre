{% extends '@MVCore/model_booking.html.twig' %}

{% block stylesheets %}
 {{ parent() }}
<link rel = "stylesheet" href = "{{ asset('bundles/mvbooking/js/jquery-ui.theme.min.css') }}" type     = "text/css">
<link rel = "stylesheet" href = "{{ asset('bundles/mvbooking/js/jquery-ui.structure.min.css') }}" type = "text/css">
<link rel = "stylesheet" href = "{{ asset('bundles/mvbooking/css/user.css') }}" type             = "text/css">
<link rel = "stylesheet" href = "{{ asset('bundles/mvbooking/css/style_date.css') }}" type             = "text/css">
{% endblock %}

{% block body %}
    {{ parent() }}
    <h2 class="subtitle">{{"Merci de bien vouloir renseigner leurs identités"|trans}}</h2>
    <h3 class="mention">{{'Pour les tarifs réduits (étudiants, militaires, professeurs,…) un justificatif sera demandé à l’entrée'|trans}}</h3>
    <p class="selectedDate">{{date}}</p>
    
    {{ form_start(form) }}
    {{ form_errors(form) }}
    
        <p class= "user">{{'Vous avez sélectionné'|trans}} : <strong>{{nbr}}</strong> {{'visiteurs'|trans}}</p>
        <div class="containFormUser">
            {{ form_row(form.name) }}
            {{ form_row(form.firstName) }}
            {{ form_row(form.country) }}
            {{ form_row(form.birthDate) }}
        </div>

{{ form_end(form) }}

    {% if locale == 'fr' %}
        <a href="" class="nextStep" >{{'Étape suivante'|trans}}</a>
    {% endif %}
    {% if locale == 'en' %}
        <a href="" class="nextStepEn" >{{'Étape suivante'|trans}}</a>
    {% endif %}
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript" src="{{asset('bundles/mvbooking/js/howManyPick.js')}}"></script>
    <script type="text/javascript" src="{{asset('bundles/mvbooking/js/user.js')}}"></script>
{% endblock %}